    <style type="text/css">
        body {
            font-family: "Lato", sans-serif;
        }

        .vertical{
            display: flex;
            flex-direction: column;
            flex-wrap: wrap;    
        }
        
        .horizontal{
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;    
        }
        
        .overlap *{
            position: absolute;
        }
        
        .textWidget{
            padding: 8px 8px 8px 32px;
            text-decoration: none;
            font-size: 25px;
            background-color: #818181;
            display: block;
            transition: 0.3s;
        }
        
        .buttonWidget a{
            float: left;
            text-align: center;
            padding: 12px 16px;
            transition: all 0.3s ease;
            font-size: 30px;
        }
                
        .buttonWidget a:hover {
            background-color: #000;
        }
        
        .buttonWidget.active {
            background-color: dodgerblue;
        }
        
        .buttonWidget.active :hover{
            background-color:darkblue;
        }
        
        .text{
            padding: 8px 8px 8px 32px;
            text-decoration: none;
            font-size: 25px;
            display: block;
            transition: 0.3s;
        }
        
        .image{
        }
        
        .notVisible{
            display: none;
        }
        
